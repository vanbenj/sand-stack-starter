{
  "name": "sand-stack-starter-api",
  "version": "0.1.0",
  "description": "API app for SANDstack",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "./node_modules/.bin/nodemon --watch src --ext js,graphql --exec babel-node  src/index.js",
    "build": "npx babel src -d build; cp .env build; cp src/schema.graphql build",
    "start": "npm run build && node build/index.js"
  },
  "license": "MIT",
  "dependencies": {
    "apollo-boost": "^0.3.1",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-link-http": "^1.5.17",
    "apollo-server": "^2.25.4",
    "dotenv": "^8.2.0",
    "graphql-tag": "^2.10.3",
    "neo4j-driver": "^1.7.6",
    "neo4j-graphql-js": "^2.13.0",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "corejs": "3.1.3",
          "useBuiltIns": "usage"
        }
      ]
    ]
  }
}
